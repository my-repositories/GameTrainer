# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 100
insert_final_newline = true
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

